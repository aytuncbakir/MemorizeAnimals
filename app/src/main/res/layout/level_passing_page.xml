<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/level_passing_layout"
    android:orientation="vertical"
    android:layout_width="328dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center">


    <TextView
        android:id="@+id/tebrikText"
        android:layout_width="328dp"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        android:textSize="14sp"
        android:background="@drawable/tebrik_text_tasarim"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:text="Excellent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



    <ImageButton
        android:id="@+id/look_back"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:textSize="10sp"
        android:background="@drawable/show_back"
        android:textColor="@color/colorWhite"
       />

        <ImageButton
            android:id="@+id/play_next_Level"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:textSize="10sp"
            android:background="@drawable/play_next"
            android:textColor="@color/colorWhite"
            />

    <ImageButton
        android:id="@+id/look_forward"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:textSize="10sp"
        android:background="@drawable/show_next"
        android:textColor="@color/colorWhite"
       />

    </LinearLayout>


 </LinearLayout>